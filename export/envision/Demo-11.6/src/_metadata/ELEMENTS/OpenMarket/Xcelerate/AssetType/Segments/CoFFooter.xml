<?xml version="1.0" ?>
<!DOCTYPE FTCS SYSTEM "futuretense_cs.dtd">
<FTCS Version="1.1">
<!-- OpenMarket/Xcelerate/AssetType/Segments/CoFFooter
--
-- INPUT
--	continuePage
--	continueName
-- OUTPUT
--
-->

<if COND="Variables.WrongPage=wrong">
	<then>	
		<td align="left">
		  <XLAT.LOOKUP KEY="dvin/AT/Common/CancelChanges" VARNAME="_CancelChanges_" ESCAPE="true"/>
			<XLAT.LOOKUP KEY="dvin/UI/Cancel" VARNAME="_CancelSegment_"/>
			<A HREF="javascript:void(0)" onclick="return FixRulePagename('Variables.ThisPage','ContentForm1','SegmentCancel');" onmouseover="window.status='Variables._CancelChanges_';return true;" onmouseout="window.status='';return true;" REPLACEALL="Variables._CancelChanges_,Variables.ThisPage"><CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/TextButton"><ARGUMENT NAME="buttonkey" VALUE="UI/Forms/Cancel"/></CALLELEMENT></A>
      <img height="1" width="15" src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" REPLACEALL="Variables.cs_imagedir"/>
			<XLAT.LOOKUP KEY="dvin/AT/Segments/Gotonextcriteriacategory" VARNAME="_nextcriteria_" ESCAPE="true"/>
			<XLAT.LOOKUP KEY="dvin/AT/Segments/Gotonextcriteriacategory" VARNAME="_nextcriteria_ALT"/>
			<A HREF="javascript:void(0)" onclick="return FixRulePagename('Variables.ThisPage','Variables.continuePage','Variables.continueName');" onmouseover="window.status='Variables._nextcriteria_';return true;"   onmouseout="window.status='';return true;" REPLACEALL="Variables._nextcriteria_,Variables.ThisPage,Variables.continuePage,Variables.continueName"><CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/TextButton"><ARGUMENT NAME="buttonkey" VALUE="UI/Forms/Continue"/></CALLELEMENT></A>
		</td>
	</then>
	<else>
		<td align="left">
		<!--
			<A HREF="javascript:void(0)" onclick="return FixRulePagename('Variables.ThisPage','ContentForm1','SegmentCancel');" onmouseover="window.status='Cancel Changes';return true;" onmouseout="window.status='';return true;" REPLACEALL="Variables.ThisPage">
				<IMG src="Variables.cs_imagedir/graphics/SessionVariables.locale/button/content/images/cancel_this_criterion.gif" ALT="Cancel this criterion" BORDER="0" VSPACE="10" REPLACEALL="Variables.cs_imagedir,SessionVariables.locale"/>
			</A>
			-->
			<img height="1" width="15" src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" REPLACEALL="Variables.cs_imagedir"/>
			<XLAT.LOOKUP KEY="dvin/AT/Segments/Cancelcriterion" VARNAME="_Cancelcriterion_" ESCAPE="true"/>
			<XLAT.LOOKUP KEY="dvin/AT/Segments/Cancelcriterion" VARNAME="_Cancelcriterion_ALT"/>
			<!-- Fix for PR#19224.Added two variables for this mainly PickAttributeSelected and CriteriaOperationReq.PickAttributeSelected is set to true when the user clicks on history attribute from the history page.This would allow us to check if we want to delete the rule generated by the click on the attribute link.CriteriaOperationReq 
			was created to have an additonal variable to track the original action.The variable CriteriaOperatin changes during several actions on the add screen and cannot be used to remember the original criteria operation-->
			<if cond="Variables.CriteriaRow=0">
			<then>
				<if cond="Variables.CriteriaColumn=0">
				<then>
					<setvar name="goToPage" value="NewContentFront"/>
				</then>
				<else>
					<setvar name="goToPage" value="EditFront"/>
				</else>
				</if>
			</then>
			<else>
				<setvar name="goToPage" value="EditFront"/>
			</else>
			</if>
			<STRING.ENCODE VARIABLE="CriteriaRow" VARNAME="CriteriaRow"/>
			<STRING.ENCODE VARIABLE="CriteriaColumn" VARNAME="CriteriaColumn"/>
			<A HREF="javascript:void(0)" onclick="if(document.forms[0].PickAttributeSelected.value=='true' && (document.forms[0].CriteriaOperationReq.value=='AddColumn' || document.forms[0].CriteriaOperationReq.value=='AddRow')){document.forms[0].CriteriaOperationReq.value='';document.forms[0].PickAttributeSelected.value='';return AddEditRule('Variables.goToPage','ContentForm1','SegmentSave','DeleteItem','Variables.CriteriaColumn','Variables.CriteriaRow');} else{ return FixRulePagename('Variables.ThisPage','ContentForm1','SegmentCancel');}" onmouseover="window.status='Variables._Cancelcriterion_';return true;" onmouseout="window.status='';return true;" REPLACEALL="Variables.goToPage,Variables.CriteriaColumn,Variables.CriteriaRow,Variables._Cancelcriterion_,Variables.ThisPage"><CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/TextButton"><ARGUMENT NAME="buttonkey" VALUE="UI/Forms/CancelThisCriterion"/></CALLELEMENT></A>

			<img height="1" width="15" src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" REPLACEALL="Variables.cs_imagedir"/>
			<XLAT.LOOKUP KEY="dvin/AT/Segments/Savecriterion" VARNAME="_Savecriterion_" ESCAPE="true"/>
			<XLAT.LOOKUP KEY="dvin/AT/Segments/Savecriterion" VARNAME="_Savecriterion_ALT"/>
			<A HREF="javascript:void(0)" onclick="setTabDirty(); return FixRulePagenameValidate('Variables.ThisPage','ContentForm1','SegmentSave','Variables.OptionName','Variables.SValueName','Variables.STypeName','Variables.HValueName');" onmouseover="window.status='Variables._Savecriterion_';return true;" onmouseout="window.status='';return true;" REPLACEALL="Variables._Savecriterion_,Variables.ThisPage,Variables.OptionName,Variables.SValueName,Variables.STypeName,Variables.HValueName"><CALLELEMENT NAME="OpenMarket/Xcelerate/UIFramework/Util/TextButton"><ARGUMENT NAME="buttonkey" VALUE="UI/Forms/AddThisCriterion"/></CALLELEMENT></A>
			<!--
			<img height="1" width="15" src="Variables.cs_imagedir/graphics/common/screen/dotclear.gif" REPLACEALL="Variables.cs_imagedir"/>
			<A HREF="javascript:void(0)" onclick="return FixRulePagename('Variables.ThisPage','Variables.continuePage','Variables.continueName');" onmouseover="window.status='Go to next category to specify a segment criteria';return true;"   onmouseout="window.status='';return true;" REPLACEALL="Variables.ThisPage,Variables.continuePage,Variables.continueName">
				<IMG src="Variables.cs_imagedir/graphics/SessionVariables.locale/button/content/images/continue.gif" ALT="Go to next category to specify a segment criteria" VSPACE="10" BORDER="0" REPLACEALL="Variables.cs_imagedir,SessionVariables.locale"/>
			</A>
			-->
		</td>
	</else>
</if>		

</FTCS> 
